<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project2.signupController" prefWidth="360" prefHeight="580"
      style="-fx-background-color: #3498db; -fx-padding: 20; -fx-border-color: #2980b9; -fx-border-width: 1; -fx-border-radius: 5;">

    <Label text="Sports Event Organizer" style="-fx-font-size: 28; -fx-text-fill: #53FF6A;" VBox.vgrow="NEVER" fx:id="welcomeText">
        <padding>
            <Insets top="20" right="0" bottom="0" left="0"/>
        </padding>
    </Label>

    <Label text="Sign Up" style="-fx-font-size: 24; -fx-text-fill: #53FF6A;" alignment="CENTER">
        <padding>
            <Insets top="15" right="20" bottom="20" left="20"/>
        </padding>
    </Label>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30"/>
        </VBox.margin>
        <Label text="Username:" style="-fx-font-size:16; -fx-text-fill: #53FF6A;" />
        <TextField fx:id="usernameTextField" maxWidth="200"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30"/>
        </VBox.margin>
        <Label text="Usermail:" style="-fx-font-size:16; -fx-text-fill: #53FF6A;" />
        <TextField fx:id="usermailTextField" maxWidth="200"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30"/>
        </VBox.margin>
        <Label text="Password:" style="-fx-font-size:16; -fx-text-fill: #53FF6A;" />
        <PasswordField fx:id="passwordTextField" maxWidth="200">
            <padding>
                <Insets top="0" right="0" bottom="10" left="0"/>
            </padding>
        </PasswordField>
    </VBox>

    <Button text="Sign Up" onAction="#onsignupButtonClick" fx:id="signupButton" style="-fx-font-size: 16; -fx-background-color: #2ecc71; -fx-text-fill: white;" maxWidth="200" maxHeight="40" />

    <HBox xmlns:fx="http://javafx.com/fxml" spacing="5" alignment="CENTER_LEFT">
        <Label text="Already have an account?" style="-fx-font-size:16; -fx-text-fill: FCFF53;">
            <padding>
                <Insets left="30"/>
            </padding>
        </Label>
        <Button text="Login" onAction="#onloginButtonClick" fx:id="loginButton" style="-fx-font-size: 12; -fx-background-color: #e74c3c; -fx-text-fill: white;" maxWidth="50" maxHeight="20" />
    </HBox>

</VBox>
