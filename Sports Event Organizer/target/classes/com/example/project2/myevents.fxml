<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project2.myeventsController"
      prefHeight="585.0" prefWidth="370.0"
      style="-fx-background-color: #3498db;-fx-border-color: #2980b9;">
    <Label text="Sports Event Organizer" style="-fx-font-size: 25;" VBox.vgrow="NEVER" fx:id="welcomeText">
        <padding>
            <Insets top="10" right="0" bottom="10" left="35"/>
        </padding>
    </Label>
    <TableView fx:id="EventsTable" style="-fx-background-color: #34495e; -fx-border-color: #2c3e50;">
        <columns>
            <TableColumn text="Event Name" fx:id="enameColumn" style="-fx-background-color: #EEEEEE; -fx-text-fill: black;" />
            <TableColumn text="Event ID" fx:id="eidColumn" style="-fx-background-color: #EEEEEE; -fx-text-fill: black;" />
            <TableColumn text="Sports Name" fx:id="snameColumn" style="-fx-background-color:#EEEEEE; -fx-text-fill: black;" />
            <TableColumn text="Place" fx:id="placeColumn" style="-fx-background-color: #EEEEEE; -fx-text-fill: black;" />
            <TableColumn text="Starting Time" fx:id="timeColumn" style="-fx-background-color: #EEEEEE; -fx-text-fill: black;" />
        </columns>
    </TableView>

    <HBox xmlns:fx="http://javafx.com/fxml" spacing="5" alignment="CENTER_LEFT">
        <Label text="Click Here To Menu" style="-fx-font-size:16;">
            <padding>
                <Insets left="30" top="20"/>
            </padding> </Label>
        <Button text="Menu" onAction="#onmenuButtonClick" fx:id="loginButton" style="-fx-font-size: 12;" maxWidth="60" maxHeight="20" >
            <HBox.margin>
                <Insets top="20" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
