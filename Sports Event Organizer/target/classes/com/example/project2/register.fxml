<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.project2.regController"
      prefHeight="580.0" prefWidth="360.0"
      style="-fx-background-color: #3498db; -fx-padding: 20;">

    <VBox>
        <VBox.margin>
            <Insets left="30" />
        </VBox.margin>
        <Label text="Sports Event Organizer" style="-fx-font-size: 27; -fx-text-fill: #53FF6A;" VBox.vgrow="NEVER" fx:id="welcomeText">
        </Label>
    </VBox>

    <Label text="Add Event" style="-fx-font-size: 24; -fx-text-fill:#FF4500;" alignment="CENTER">
        <padding>
            <Insets top="15" right="20" bottom="20" left="20"/>
        </padding>
    </Label>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30"/>
        </VBox.margin>
        <Label text="Event Name:" style="-fx-font-size:16; -fx-text-fill: #e74c3c;" />
        <TextField fx:id="eventnameTextField" maxWidth="200"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30"/>
        </VBox.margin>
        <Label text="Event ID:" style="-fx-font-size:16; -fx-text-fill: #e74c3c;" />
        <TextField fx:id="eventidtypeTextField" maxWidth="200"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30"/>
        </VBox.margin>
        <Label text="Sports Name:" style="-fx-font-size:16; -fx-text-fill:#e74c3c;" />
        <TextField fx:id="sportsnameTextField" maxWidth="200">
            <padding>
                <Insets top="0" right="0" bottom="10" left="0"/>
            </padding>
        </TextField>
    </VBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30"/>
        </VBox.margin>
        <Label text="Place:" style="-fx-font-size:16; -fx-text-fill:#e74c3c;" />
        <TextField fx:id="placeTextField" maxWidth="200">
            <padding>
                <Insets top="0" right="0" bottom="10" left="0"/>
            </padding>
        </TextField>
    </VBox>

    <VBox spacing="10" alignment="CENTER_LEFT">
        <VBox.margin>
            <Insets left="30"/>
        </VBox.margin>
        <Label text="Starting Time:" style="-fx-font-size:16; -fx-text-fill:#e74c3c;" />
        <TextField fx:id="starttimeTextField" maxWidth="200">
            <padding>
                <Insets top="0" right="0" bottom="10" left="0"/>
            </padding>
        </TextField>
    </VBox>

    <VBox alignment="CENTER">
        <VBox.margin>
            <Insets top="30"/>
        </VBox.margin>
        <Button text="Confirm" onAction="#onconfirmButtonclick" fx:id="confirmButton" style="-fx-font-size: 16; -fx-background-color: #2ecc71; -fx-text-fill: white;" maxWidth="200" maxHeight="40" >
        </Button>
    </VBox>

    <HBox xmlns:fx="http://javafx.com/fxml" spacing="5" alignment="CENTER_LEFT">
        <Label text="Click Here To Menu" style="-fx-font-size:16; -fx-text-fill: #ecf0f1;">
            <padding>
                <Insets left="30" top="20"/>
            </padding>
        </Label>
        <Button text="Menu" onAction="#onmenuButtonClick" fx:id="loginButton" style="-fx-font-size: 12; -fx-background-color: #f39c12; -fx-text-fill: white;" maxWidth="60" maxHeight="20" >
            <HBox.margin>
                <Insets top="20" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>

